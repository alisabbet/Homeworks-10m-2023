#include <iostream>
#include <thread>
#include <mutex>
using namespace std;

int A, b = 1, S = 0;
mutex mtx, mtx1;

void cinn() {
    mtx.lock();
    while (b == 1) {
        cin >> A;
        S += A;
        mtx.unlock();
        this_thread::sleep_for(10ms);
        mtx.lock();
    }
}

void coutt() {
    while (b == 1) {
        mtx.lock();
        cout << S << ' ' << endl;
        mtx.unlock();
        this_thread::sleep_for(30ms);
    }
}

int main() {
    thread t1(cinn);
    thread t2(coutt);
    t1.join();
    t2.join();
}
